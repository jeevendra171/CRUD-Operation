@model LoginForm.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
@using (Html.BeginForm("Register", "Account"))
{
    <div class="container1">
        <div class="form-register">
            <div class="container body-content">
                <h3>Registration From</h3>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    <label for="floatingInput"><i class="bi bi-person" style="color:black"> <b> Name</b></i></label>
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(m => m.MobileNumber, new { @class = "form-control" })
                    <label for="floatingInput"><i class="bi bi-telephone" style="color:black"><b> Mobile No</b></i></label>
                    @Html.ValidationMessageFor(m => m.MobileNumber, "", new { @class = "text-danger" })
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    <label for="floatingInput"><i class="bi bi-envelope" style="color:black"><b> Email</b></i></label>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                    <label for="floatingInput"><i class="bi bi-geo-alt" style="color:black"><b> Address</b></i></label>
                    @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", type = "password" })
                    <label for="floatingInput"><i class="bi bi-lock" style="color:black"><b> Password</b></i></label>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", type = "password" })
                    <label for="floatingInput"><i class="bi bi-lock" style="color:black"><b> ConfirmPassword</b></i></label>
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
                <div class="text-center">
                    <input type="submit" value="Register" class="btn btn-primary" />
                    <button type="reset" class="btn btn-primary">Reset</button>
                </div>
                <div class="text-center">
                    <h6>Already have an Account? @Html.ActionLink("Login","Login","Account")</h6>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

